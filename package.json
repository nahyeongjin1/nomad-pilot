{
  "name": "nomad-pilot",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @nomad-pilot/backend start:dev",
    "build": "pnpm --filter @nomad-pilot/backend build",
    "test": "pnpm --filter @nomad-pilot/backend test",
    "test:e2e": "pnpm --filter @nomad-pilot/backend test:e2e",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.19.11",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
